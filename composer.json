{
  "name": "dev-no-kage/project-initializer",
  "description": "Projet PHP structuré avec une architecture MVC minimaliste et gestion de dépendances via YAML.",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\Controller\\": "src/controller/",
      "App\\Service\\": "src/service/",
      "App\\Entity\\": "src/entity/",
      "App\\Repository\\": "src/repository/",
      "DevNoKage\\Abstract\\": "app/core/abstract/",
      "DevNoKage\\Enums\\": "app/core/enums/",
      "DevNoKage\\Interface\\": "app/core/Interfaces/",
      "DevNoKage\\": "app/core/"
    },
    "files": [
      "app/config/helpers.php"
    ]
  },
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.6",
    "symfony/yaml": "^6.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "authors": [
    {
      "name": "Abdoulaye",
      "email": "abdoulaye150199@gmail.com"
    }
  ],
  "scripts": {
    "database:migrate": "php migrations/migration.php",
    "database:seed": "php seeders/seeder.php"
  }
}

